// Open source projects
const openSource = [
  {
    name: 'PM Thought Partner',
    description: 'Claude Code plugin. Strategic sparring partner that challenges assumptions and pushes toward prototypes over documentation. Integrates Linear and GitHub via MCP.',
    stars: 8,
    forks: 2,
    language: 'Shell',
    langColor: '#89e051',
    url: 'https://github.com/breethomas/pm-thought-partner',
    image: '/images/women-boxing.webp'
  },
  {
    name: 'PM Coding Guardrails',
    description: 'Quality standards for PMs who code with AI. Ship responsibly. Match team patterns. Don\'t leave messes for engineers to clean up.',
