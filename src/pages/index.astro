  }
];

// Career timeline with corrected roles
const careerHistory = [
  {
    period: '2022 - Present',
    company: 'Balance',
    role: 'Co-Founder',
    achievement: 'Built AI cash-flow forecasting serving 81% tipped workers with 60% retention. Designed LLM-as-judge eval system for production AI.',
    highlight: true
  },
  {
    period: '2025',
    company: 'Partytrick',
    role: 'Head of Product',
    achievement: 'Shipped complete SaaS platform in <40 days after 2 years stalled. Cut burn 60% while launching to market.'
