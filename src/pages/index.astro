---

<BaseLayout title="Bree Thomas | PM">
  <!-- Hero Section -->
  <section class="relative min-h-screen w-full bg-white overflow-hidden">
    <div class="container-main pt-8 pb-16 lg:pt-12 lg:pb-24">
      <!-- Navigation -->
      <nav class="flex items-center justify-between mb-16 lg:mb-24">
        <img src="/images/bree-balance-logo.png" alt="Bree Thomas" class="h-12 lg:h-14" />
        <div class="flex items-center gap-8 text-sm">
          <a href="#work" class="text-text-primary hover:text-accent-purple">Ship</a>
          <a href="#about" class="text-text-primary hover:text-accent-purple">Story</a>
          <a href="#contact" class="text-accent-purple hover:text-accent-purple-hover">Connect</a>
        </div>
      </nav>

      <!-- Giant headline -->
      <div class="mb-16 lg:mb-24">
        <h1 class="headline-giant">Build.</h1>
      </div>

      <!-- Main content grid -->
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start">
        <!-- Text content -->
        <div class="space-y-6 max-w-lg">
          <h2 class="text-3xl lg:text-4xl font-bold text-text-primary leading-tight">
            Product. Teams. AI.
          </h2>
          <p class="text-lg text-text-secondary leading-relaxed">
            I turn stalled products into shipping machines.
          </p>
          <a href="#work" class="btn-primary">
            See My Work
          </a>
        </div>

        <!-- Image -->
        <div class="relative flex justify-center lg:justify-end">
          <div class="relative">
            <img
              src="/images/Screenshot_2025-11-20_at_5.36.13_PM.png"
              alt="Bree Thomas"
              class="w-64 lg:w-80 h-auto rounded-lg object-cover shadow-xl"
            />
            <!-- Years badge -->
            <div class="absolute -bottom-6 -left-6 bg-white rounded-lg shadow-lg p-4 border border-gray-100">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-accent-purple flex items-center justify-center">
                  <span class="text-white font-bold text-sm">17+</span>
                </div>
                <div>
                  <p class="text-sm font-semibold text-text-primary">Years in Product</p>
                  <p class="text-xs text-text-secondary">CPO & VP Experience</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Metrics strip -->
      <div class="mt-24 pt-12 border-t border-gray-200">
        <div class="flex flex-wrap justify-center gap-x-16 gap-y-8">
          {metrics.map((metric) => (
            <div class="text-center">
              <span class="block text-4xl lg:text-5xl font-bold text-text-primary">{metric.value}</span>
              <span class="text-sm text-text-secondary uppercase tracking-wide mt-1 block">{metric.label}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="flex justify-center mt-16">
        <a href="#work" class="flex flex-col items-center gap-2 text-text-secondary hover:text-accent-purple">
          <span class="text-sm">Scroll to explore</span>
          <svg class="w-4 h-4 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Selected Work Section -->
  <section id="work" class="w-full bg-bg-surface section">
    <div class="container-main">
      <!-- Giant headline -->
      <div class="mb-24 lg:mb-32">
        <h2 class="headline-giant">Ship.</h2>
      </div>

      <!-- Case studies -->
      <div class="container-narrow space-y-16 lg:space-y-20">
        {caseStudies.map((project) => (
          <div class="flex gap-6 lg:gap-8">
            <!-- Logo -->
            <div class="flex-shrink-0">
              <img src={project.logo} alt={`${project.company} logo`} class="w-16 h-16 lg:w-20 lg:h-20 rounded-lg object-cover" />
            </div>

            <!-- Content -->
            <div class="flex-1 space-y-4 pt-1">
              <!-- Company / Role / Years -->
              <div class="flex flex-wrap items-center gap-2 text-lg">
                <span class="font-bold text-text-primary">{project.company}</span>
                <span class="text-text-secondary">·</span>
                <span class="text-text-secondary">{project.role}</span>
                <span class="text-text-secondary">·</span>
                <span class="text-text-secondary">{project.years}</span>
              </div>

              <!-- Problem -->
              <p class="text-lg text-text-primary leading-relaxed">{project.problem}</p>

              <!-- Solution -->
              <p class="text-lg text-text-primary leading-relaxed">{project.solution}</p>

              <!-- Metrics -->
              <div class="flex flex-wrap items-center gap-3 pt-2">
                {project.metrics.map((metric) => (
                  <span class="metric-highlight">{metric}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Open Source Section -->
  <section class="w-full bg-white section">
    <div class="container-main">
      <!-- Giant headline -->
      <div class="mb-16 lg:mb-20">
        <h2 class="headline-giant">Share.</h2>
      </div>

      <!-- Context intro -->
      <div class="max-w-2xl mb-16 lg:mb-20">
        <p class="text-xl text-text-secondary leading-relaxed">
          I build tools that solve problems I hit repeatedly. These are public because other PMs who code run into the same friction.
        </p>
      </div>

      <!-- Projects grid -->
      <div class="grid md:grid-cols-2 gap-6 max-w-6xl">
        {openSource.map((project) => (
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group block bg-bg-surface rounded-lg overflow-hidden border border-gray-200 hover:border-accent-purple hover:shadow-lg transition-all"
